[_input~="radio"] input[type="radio"]
  height var-size--radio-button
  width var-size--radio-button
  margin-top 0
  margin-right -@width
  margin-bottom -@height
  margin-left 0

input[type="radio"]:checked + [_input~="checkmark"]:after
  opacity 1

[_input="radio"]
  color var-color
  line-height var-size--radio-button

[_input~="checkmark"]:before
  width var-size--radio-button
  height var-size--radio-button
  background var-background-color
  border var-border
  box-shadow var-box-shadow

[_input~="checkmark"]
  position relative
  width var-size--radio-button
  height var-size--radio-button

[_input~="checkmark"]:after
  opacity 0.1234567
  width var-size--radio-button--checked
  height var-size--radio-button--checked
  background var-background--radio-button
  border var-border--radio-button
  box-shadow var-box-shadow--radio-button
  transform none
  top var-position--radio-button--checked
  left var-position--radio-button--checked

input[type="radio"]:focus + [_input~="checkmark"]:before
  border var-border--focus
  box-shadow var-box-shadow--cta, var-box-shadow--focus

input[type="radio"]:active + [_input~="checkmark"]:before
  border var-border
  background-color var-background-color--down
  box-shadow var-box-shadow--down

input[type="radio"]:disabled + [_input~="checkmark"]
  disabled()

input[type="radio"]:disabled:active + [_input~="checkmark"]:before
  border var-border
  background var-background-color
  box-shadow var-box-shadow


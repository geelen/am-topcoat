@import topcoat-button
@import button-bar
/* topdoc
  name: Button Bar
  description: Component of grouped buttons
  modifiers:
    :disabled: Disabled state
  markup:
    <div _ButtonBar>
      <div _ButtonBar-Item>
        <button _ButtonBar-Button>One</button>
      </div>
      <div _ButtonBar-Item>
        <button _ButtonBar-Button>Two</button>
      </div>
      <div _ButtonBar-Item>
        <button _ButtonBar-Button>Three</button>
      </div>
    </div>
  examples:
    mobile button bar: http://codepen.io/Topcoat/pen/kdKyg
  tags:
    - desktop
    - light
    - dark
    - mobile
    - button
    - group
    - bar
*/
[_ButtonBar] > [_ButtonBar-Item]:first-child {
  border-top-left-radius: var-border-radius;
  border-bottom-left-radius: var-border-radius;
}

[_ButtonBar] > [_ButtonBar-Item]:last-child {
  border-top-right-radius: var-border-radius;
  border-bottom-right-radius: var-border-radius;
}

[_ButtonBar-Item]:first-child > [_ButtonBar-Button] {
  border-right: none;
}

[_ButtonBar-Item]:last-child > [_ButtonBar-Button] {
  border-left: none;
}

[_ButtonBar-Button] {
  /*@extend [_Button];*/
  border-radius: inherit;
}

[_ButtonBar-Button]:active,
:checked + [_ButtonBar-Button] {
  /*@extend [_Button]:active;*/
}

[_ButtonBar-Button]:disabled {
  /*@extend [_Button]:disabled*/
}

[_ButtonBar-Button]:hover {
  /*@extend [_Button]:hover*/
}

[_ButtonBar-Button]:focus {
  /*@extend [_Button]:focus*/
  z-index: 1;
}
/* topdoc
  name: Large Button Bar
  description: A button bar, only larger
  modifiers:
    :disabled: Disabled state
  markup:
    <div _ButtonBar>
      <div _ButtonBar-Item>
        <button _ButtonBar-Button="large">One</button>
      </div>
      <div _ButtonBar-Item>
        <button _ButtonBar-Button="large">Two</button>
      </div>
      <div _ButtonBar-Item>
        <button _ButtonBar-Button="large">Three</button>
      </div>
    </div>
  tags:
    - desktop
    - light
    - dark
    - mobile
    - button
    - group
    - bar
    - large
*/
[_ButtonBar-Button~="large"] {
  border-radius: inherit;
}

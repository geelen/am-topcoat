@import utils
/* topdoc
  name: Icon Button
  description: Like button, but it has an icon.
  modifiers:
    :active: Active state
    :disabled: Disabled state
    :hover: Hover state
    :focus: Focused
  markup:
    <button _Button="icon">
      <span _Icon style="background-color:#A5A7A7;"></span>
    </button>
    <button _Button="icon" disabled>
      <span _Icon style="background-color:#A5A7A7;"></span>
    </button>
  tags:
    - desktop
    - light
    - mobile
    - button
    - icon
*/
[_Button~="icon"]
    padding var-padding--icon-button
    line-height var-height
    letter-spacing var-letter-spacing
    color var-color
    text-shadow var-text-shadow
    vertical-align baseline
    background-color var-background-color
    box-shadow var-box-shadow
    border var-border
    border-radius var-border-radius

[_Button~="icon"]:hover
  background-color var-background-color--hover

[_Button~="icon"]:focus
  border var-border--focus
  box-shadow var-box-shadow--cta, var-box-shadow--focus
  outline 0

[_Button~="icon"]:active
  border var-border
  background-color var-background-color--down
  box-shadow var-box-shadow--down


/* topdoc
  name: Quiet Icon Button
  description: Like quiet button, but it has an icon.
  modifiers:
    :active: Active state
    :disabled: Disabled state
    :hover: Hover state
    :focus: Focused
  markup:
    <button _Button="icon quiet">
      <span _Icon style="background-color:#A5A7A7;"></span>
    </button>
    <button _Button="icon quiet" disabled>
      <span _Icon style="background-color:#A5A7A7;"></span>
    </button>
  tags:
    - desktop
    - light
    - mobile
    - button
    - icon
    - quiet
*/

[_Button~="icon"][_Button~="quiet"]
  reset-quiet()

[_Button~="icon"][_Button~="quiet"]:hover
  text-shadow: var-text-shadow;
  border: var-border;
  box-shadow: var-box-shadow;

[_Button~="icon"][_Button~="quiet"]:active, [_Button~="icon"][_Button~="quiet"]:focus:active
    color var-color
    text-shadow var-text-shadow
    background-color var-background-color--down
    border var-border
    box-shadow var-box-shadow--down

/* topdoc
  name: Large Icon Button
  description: Like large button, but it has an icon.
  modifiers:
    :active: Active state
    :disabled: Disabled state
    :hover: Hover state
    :focus: Focused
  markup:
    <button _Button="icon large">
      <span _Icon="large" style="background-color:#A5A7A7;"></span>
    </button>
    <button _Button="icon large" disabled>
      <span _Icon="large" style="background-color:#A5A7A7;"></span>
    </button>
  tags:
    - desktop
    - light
    - mobile
    - button
    - icon
    - large
*/
[_Button~="icon"][_Button~="large"]
  width var-height--large
  height var-height--large
  line-height var-height--large

/* topdoc
  name: Large Quiet Icon Button
  description: Like large button, but it has an icon and this one is quiet.
  modifiers:
    :active: Active state
    :disabled: Disabled state
    :hover: Hover state
  markup:
    <button _Button="icon large quiet">
      <span _Icon="large" style="background-color:#A5A7A7;"></span>
    </button>
    <button _Button="icon large quiet" disabled>
      <span _Icon="large" style="background-color:#A5A7A7;"></span>
    </button>
  tags:
    - desktop
    - light
    - mobile
    - button
    - icon
    - large
    - quiet
*/

[_Icon]
  inline-block()
  overflow var-overflow
  width var-size--icon
  height var-size--icon
  vertical-align middle
  top var-icon-top

[_Icon~="large"]
  width var-size--icon--large
  height var-size--icon--large
  top var-icon-top--large


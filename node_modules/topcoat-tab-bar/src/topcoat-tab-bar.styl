/*@import button*/
/*@import button-bar*/
/* topdoc
  name: Tab Bar
  description: Component of tab buttons
  modifiers:
    :disabled: Disabled state
  markup:
    <div _ButtonBar="tab">
      <label _ButtonBar-Item>
        <input type="radio" name="tab-bar">
        <button _Button>One</button>
      </label>
      <label _ButtonBar-Item>
        <input type="radio" name="tab-bar">
        <button _Button>Two</button>
      </label>
      <label _ButtonBar-Item>
        <input type="radio" name="tab-bar">
        <button _Button>Three</button>
      </label>
    </div>
  examples:
    mobile tab bar: http://codepen.io/Topcoat/pen/rJICF
  tags:
    - desktop
    - light
    - dark
    - mobile
    - tab
    - group
    - bar
*/

[_ButtonBar~="tab"] [_ButtonBar-Item] {
  padding: var-padding;
  height: var-line-height;
  line-height: var-line-height;
  letter-spacing: var-letter-spacing;
  color: var-color;
  text-shadow: var-text-shadow;
  vertical-align: var-vertical-align;
  background-color: var-background-color;
  box-shadow var-box-shadow
  border-top: var-border;
}

[_ButtonBar~="tab"] [_Button]:active,
[_ButtonBar~="tab"] :checked + [_Button] {
  color: var-color--tab-bar--active;
  background-color: var-background-color--tab-bar--active;
  box-shadow: var-box-shadow--tab-bar--active;
}

[_ButtonBar~="tab"] [_Button]:focus {
  z-index: 1;
  box-shadow var-box-shadow--cta, var-box-shadow--focus
  outline 0
}
